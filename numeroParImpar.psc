Algoritmo numeroParImpar
	
	Definir numero1 Como Entero;
	
	Imprimir Sin Saltar "Ingrese el número: ";
	Leer numero1;
	
	si  (numero1 % 2 = 0 ) entonces
		
		Imprimir "El número ingresado -" , numero1 ,"- es par";
	SiNo
		Imprimir "EL número ingresado -", numero1 , "- es impar";
	FinSi
	
FinAlgoritmo
